{
    // Themes
    "workbench.colorTheme": "One Dark Pro Vivid",
    "workbench.iconTheme": "vs-seti",
    
    // Looks like the future!!!
    "editor.minimap.renderCharacters": false,
    
    // Stop annoying word suggestions that aren't part of a programming language
    "editor.wordBasedSuggestions": false,
    
    // Stop that annoying sidebar auto-scroll when you close a tab
    "explorer.autoReveal": false,
    // Disable confirmation popup when deleting individual files
    "explorer.confirmDelete": false,
    
    // Allow Emmet in Markdown
    "emmet.excludeLanguages": [],
    
    // Windows Settings
    "php.validate.executablePath": "C:/bin/php7/php.exe",
    "terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\cmd.exe", // "C:\\Windows\\sysnative\\cmd.exe",
    "terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",
}
